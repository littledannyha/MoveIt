<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.littledannyha.moveit.ExerciseReminderActivity"
    tools:showIn="@layout/activity_exercise_reminder">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done!"
        android:id="@+id/finishCountdownButton"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/restartCountdownButton"
        android:layout_alignStart="@+id/restartCountdownButton"
        android:layout_alignRight="@+id/restartCountdownButton"
        android:layout_alignEnd="@+id/restartCountdownButton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Time to get the blood flowing!"
        android:id="@+id/exerciseReminderText"
        android:gravity="center"
        android:layout_above="@+id/restartCountdownButton"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Another Reminder? (10 min)"
        android:id="@+id/restartCountdownButton"
        android:layout_above="@+id/finishCountdownButton"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
